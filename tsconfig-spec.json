{
  "compilerOptions": {
    "removeComments": false,
    "moduleResolution": "node",
    "module": "es2015",
    "declaration": true,
    "target": "es2015",
    "outDir": "./dist-spec",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "strictNullChecks": true,
    "incremental": true,
    "tsBuildInfoFile": "./dist-spec/compiler-cache.json",
    "strictPropertyInitialization": true,
    "lib": [
      "es2016",
      "es2015",
      "es5",
      "es6"
    ],
    "esModuleInterop": true,
    "declarationMap": true,
    "rootDir": "./spec",
    "importHelpers": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*.d.ts",
    "dist/**/*.d.ts",
    "**/dist/**/*.d.ts",
    "dist-spec",
    "dist-spec/**/*.d.ts",
    "**/dist-spec/**/*.d.ts"
  ],
  "include": [
    "spec/**/*"
  ]
}